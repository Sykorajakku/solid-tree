{
    "compilerOptions": {
        "lib": ["ES2015", "dom"],
        "types": ["reflect-metadata"],
        "module": "es6",
        "target": "ES2015",
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "isolatedModules": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true
    }
}
